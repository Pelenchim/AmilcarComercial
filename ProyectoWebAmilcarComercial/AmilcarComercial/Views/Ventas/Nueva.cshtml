@section Scripts{
    <script>
        $(document).ready(function () {
            $('.modal').modal({
                opacity: 0.5,
                inDuration: 350,
                outDuration: 250,
                ready: undefined,
                complete: undefined,
                dismissible: false,
                startingTop: '4%',
                endingTop: '10%'
            });
            $('.tooltipped').tooltip({ delay: 50 });
            $('select').material_select();
            mostrarClienteTmp();
        });
        function articulos() {
            $.ajax({
                url: '/obtener/articulos',
                type: 'GET',
                contentType: "application/json",
                dataType: "json",
                'success': function (data) {
                    $(".lista-articulos").empty();
                    $.each(data, function () {
                        $.each(this, function (name, value) {
                            $(".lista-articulos").append(
                                '<div class="col l3">' +
                                    '<div class="card white grey-text text-darken-3">' +
                                '<img src="~/Content/images/articulos/' + value.Imagen + '">' +
                                '<p>' + value.Nombre + '</p>' +
                                    '</div>' +
                                '</div>'
                            );
                        });
                    });
                },
                'error': function (request, error) {
                    alert("Request: " + JSON.stringify(request));
                }
            });
            $('#articulos').modal('open');
        };
        function clientes() {
            $.ajax({
                url: '/obtener/clientes',
                type: 'GET',
                contentType: "application/json",
                dataType: "json",
                'success': function (data) {
                    $(".lista-clientes").empty();
                    $.each(data, function () {
                        $.each(this, function (name, value) {
                            $(".lista-clientes").append(
                                '<div class="col l3">' +
                                '<div class="card white grey-text text-darken-3">' +
                                '<img src="~/Content/images/articulos/' + value.Nombre + '">' +
                                '<p onClick="agregarclienteExistente(' + value.ID + ')">' + value.Apellido + "-" + value.ID + '</p>' +
                                '</div>' +
                                '</div>' +
                                '<a class="btn" onclick="agregarClienteExistente(' + value.ID + ')">' + value.ID + '</a>'
                            );
                        });
                    });
                },
                'error': function (request, error) {
                    alert("Request: " + JSON.stringify(request));
                }
            });
            $('#clientes').modal('open');
        };
        function CancelArticulos() {
            $('#articulos').modal('close');
            $(".lista-articulos").empty();
        }
        function CancelCliente() {
            $('#clientes').modal('close');
            $(".lista-clientes").empty();
        }
        function CancelNuevoClientes() {
            $('#nuevoCliente').modal('close');
        }
        function agregarClienteTmp() {
            var datos = {
                Nombre: $("#nombre_cliente").val(),
                Apellido: $('#apellidos_cliente').val(),
                Direccion: $('#direccion').val(),
                Departamento: $('#departamento').val(),
                Telefono: $('#telefono').val(),
                Cedula: $('#cedula').val()
            };
            $.ajax({
                url: '/agregar/clienteTmp',
                type: 'POST',
                data: datos,
                'success': function (data) {
                    mostrarClienteTmp();
                    $("#nombre_cliente").val('');
                    $('#apellidos_cliente').val('');
                    $('#direccion').val('');
                    $('#departamento').val('');
                    $('#telefono').val('');
                    $('#cedula').val('');
                },
                'error': function (request, error) {
                    alert("Request: " + JSON.stringify(request));
                }
            });
        }
        function agregarClienteExistente(id) {
            $.ajax({
                url: '/agregar/clienteExistente/' + id,
                type: 'GET',
                'success': function (data) {
                    mostrarClienteTmp();
                    $("#nombre_cliente").val('');
                    $('#apellidos_cliente').val('');
                    $('#direccion').val('');
                    $('#departamento').val('');
                    $('#telefono').val('');
                    $('#cedula').val('');
                },
                'error': function (request, error) {
                    alert("Request: " + JSON.stringify(request));
                }
            });
        }
        function mostrarClienteTmp() {
            $.ajax({
                url: '/obtener/clienteTmp',
                type: 'GET',
                contentType: "application/json",
                dataType: "json",
                'success': function (data) {
                    $(".datosCliente").empty();
                    $(".datosCliente").append(
                        '<div class="col l6">' +
                        '<p><strong>Nombre: </strong>' + data.Nombre + ' ' + data.Apellido + '</p>' +                        
                        '</div>' +
                        '<div class="col l3">' +
                        '<p><strong>Cedula: </strong>' + data.Cedula + '</p>' +
                        '</div>' +
                        '<div class="col l3">' +
                        '<p><strong>Telefono: </strong>' + data.Telefono + '</p>' +
                        '</div>' +
                        '<div class="col l3">' +
                        '<p><strong>Departamento: </strong>' + data.Departamento + '</p>' +
                        '</div>' +
                        '<div class="col l9">' +
                        '<p><strong>Direccion: </strong>' + data.Direccion + '</p>' +
                        '</div>'
                    );
                },
                'error': function (request, error) {
                    alert("Request: " + JSON.stringify(request));
                }
            });
        }
        function editarCliente() {
            $('#editarCliente').modal('open');
        }
    </script>
