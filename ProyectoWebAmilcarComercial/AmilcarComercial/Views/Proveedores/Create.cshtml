@model AmilcarComercial.Models.Tbl_Proveedor

@{
    Layout = null;
}
<div class="proveedor-nuevo cyan">
    <div class="row white z-depth-1">
        <h4 class="grey-text text-darken-3 left-align"><i class="material-icons">add_box</i>Agregar Nuevo Proveedor</h4>
    </div>
    <div class="modal-content row white-text">
        <div class="col l4">
            <figure>
                <img src="~/Content/system-resources/proveedor-Default.png" class="responsive-img"/>
            </figure>
        </div>
        <div class="col l8">
            @using (Ajax.BeginForm("Create", "Proveedores", new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "proveedores",
                InsertionMode = InsertionMode.Replace,
                OnSuccess = "OnSuccess"
            }))
            {
                @Html.AntiForgeryToken()
                <div class="input-field col l12">
                    @Html.EditorFor(model => model.razon_social, new { htmlAttributes = new { @class = "form-control" } })
                    <label for="razon_social">Nombre</label>
                    @Html.ValidationMessageFor(model => model.razon_social, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col l6">
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                    <label for="telefono">N° Telefono</label>
                    @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                </div>

                <div class="input-field col l6">
                    @Html.EditorFor(model => model.Ruc, new { htmlAttributes = new { @class = "form-control" } })
                    <label for="Ruc">N° Ruc</label>
                    @Html.ValidationMessageFor(model => model.Ruc, "", new { @class = "text-danger" })
                </div>
                <div class="col l2">
                    <span class="white-text"><strong>Estado: </strong></span>
                </div>
                <div class="col l10">
                    <div class="switch">
                        <label class="white-text">
                            Inactivo
                            <input type="checkbox">
                            <span class="lever"></span>
                            Activo
                        </label>
                    </div>
                </div>

                <div class="acciones col l12 right-align">
                    <button class="btn btn-flat white red-text" type="reset" onclick="$('#nuevo').modal('close')">Cancelar</button>
                    <input type="submit" value="Guardar" class="btn btn-flat white blue-text"/>
                </div>
            }
        </div>
    </div>
</div>