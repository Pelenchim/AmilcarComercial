@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="right hide-on-med-and-down option-system">
        <li><a class="dropdown-button" href="#!" data-activates="login"><span class="name"></span><i class="material-icons right">more_vert</i></a></li>
    </ul>

    <ul id="login" class="dropdown-content">
        <li><a class="grey-text text-darken-4" href="@Url.Action("Index","Manage")"><i class="material-icons">person</i>Perfil</a></li>
        <li class="divider"></li>
        <li><a class="grey-text text-darken-4" href="@Url.Action("Index","Manage")"><i class="material-icons">settings</i>configuraciones</a></li>
        <li class="divider"></li>
        <li><a class="grey-text text-darken-4" href="javascript:document.getElementById('logoutForm').submit()"><i class="material-icons">exit_to_app</i>Cerrar sesión</a></li>
    </ul>
    }
} 
