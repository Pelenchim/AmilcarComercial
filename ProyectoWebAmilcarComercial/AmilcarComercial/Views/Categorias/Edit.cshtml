@model AmilcarComercial.Models.Tbl_Categorias

@{ 
    Layout = null;
}

<div class="categoria-editar white">
    <div class="row blue z-depth-1">
        <h4 class="white-text left-align"><i class="material-icons">edit</i>Editar Categoria</h4>
    </div>
    <div class="modal-content row grey-text text-darken-3">
        <div class="col l3">
            <figure>
                <img src="~/Content/system-resources/clientes.png" class="responsive-img" />
            </figure>
        </div>
        <div class="col l9">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_categoria)

                <div class="input-field col l6">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-field col l6">
                    @Html.DropDownList("id_CatPadre", null, htmlAttributes: new { @class = "form-control" })
                    <label>Categoria Padre</label>           
                </div>
                <div class="col l12">
                    <div class="switch">
                        <label>
                            Off
                            <input type="checkbox" value="checked">
                            <span class="lever"></span>
                            On
                        </label>
                    </div>
                </div>
                <br />
                <div class="acciones col l12 right-align">
                    <button class="btn btn-flat white red-text" type="reset" onclick="$('#editar').modal('close')">Cancelar</button>
                    <button class="btn btn-flat white blue-text" type="submit">Guardar</button>
                </div>
}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('select').material_select();
        $('.input-field :input').focus();
    });
</script>