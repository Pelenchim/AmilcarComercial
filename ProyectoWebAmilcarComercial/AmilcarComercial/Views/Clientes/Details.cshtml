@model AmilcarComercial.Models.Tbl_Clientes

@{ 
    Layout = null;
}

<div class="cliente-detalle pink">
    <div class="row white z-depth-1">
        <h4 class="grey-text text-darken-3 left-align"><i class="material-icons">info</i>Detalle de Cliente</h4>
    </div>
    <div class="modal-content row white-text">
        <div class="col l4">
            <figure>
                <img src="~/Content/system-resources/clientes.png" class="responsive-img" />
            </figure>
        </div>
        <div class="col l8">
            <p><strong>Nombre:</strong> @Model.nombre_cliente @Model.apellidos_cliente</p>
            <p><strong>Cedula:</strong> @Model.cedula</p>
            <p><strong>Telfono:</strong> @Model.telefono</p>
            <p><strong>Direccion:</strong> @Model.Tbl_Departamentos.Nombre, @Model.direccion</p>
            <div class="acciones col l12 right-align">
                @Ajax.ActionLink("Editar", "Edit", "Clientes", new { id = Model.id_cliente }, new AjaxOptions
                {
                    UpdateTargetId = "editar",
                    HttpMethod = "GET"
                }, new { @class = "btn btn-flat white blue-text", @onclick = "$('#editar').modal('open');" })
                @Ajax.ActionLink("Eliminar", "Delete", "Clientes", new { id = Model.id_cliente }, new AjaxOptions
                {
                    UpdateTargetId = "eliminar",
                    HttpMethod = "GET"
                }, new { @class = "btn btn-flat white red-text", @onclick = "$('#eliminar').modal('open');" })
            </div>
        </div>
    </div>
</div>