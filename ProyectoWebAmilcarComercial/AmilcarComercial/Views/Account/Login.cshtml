@using AmilcarComercial.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccountOptions.cshtml";
    ViewBag.Title = "Iniciar sesión";
}

<div class="login">
    <div class="login-container border-radius">
        <div class="row">
            <div class="col l6 login-info border-radius z-depth-4">
                <h3>Amilcar</h3>
            </div>
            <div class="col l6 login-form">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <p class="flow-text">Iniciar Sesion</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-field row">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new { @class = "validate" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field row">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe, new { @class = "text-grey" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Iniciar sesión" class="btn btn-defaul indigo darken-4" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                    </p>
                }
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}