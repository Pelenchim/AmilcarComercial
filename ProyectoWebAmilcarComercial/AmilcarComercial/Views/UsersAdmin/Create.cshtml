@model AmilcarComercial.Models.RegisterViewModel
@{
    ViewBag.Title = "Configuracion";
    ViewBag.SubTitle = "> Usuarios";
    ViewBag.Action = "> Nuevo";
    ViewBag.PrimaryColor = "blue-grey darken-4";
    ViewBag.NavExtendedColor = "blue-grey darken-3";
}

<nav class="nav-extended @ViewBag.NavExtendedColor">
   @* @Html.Partial("_breadcrumbPartial")*@
</nav>
<div class="row">
    <div class="container-mio white z-depth-1">
        <div class="titulo-form">
            <span>Agregar Nuevo Usuario</span>
        </div>
        <div class="divider"></div>
        <div class="nuevo-usuario">
            @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { role = "form" }))
        {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col l3">
                        <div class="col l12 s12 z-depth-1" style="height: 200px">

                        </div>
                        <div class="agregar-avatar col l12 center-align">
                            <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
                        </div>
                    </div>
                    <div class="col l9">
                        <div class="col l12">
                            <span>Informacion Personal</span>
                        </div>
                        <div class="col l12 m12 s12"><div class="divider-mio"></div></div>
                        <div class="input-field col l6">
                            <i class="material-icons prefix">account_box</i>
                            @Html.TextBoxFor(m => m.FirstName)
                            @Html.LabelFor(m => m.FirstName)
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                        <div class="input-field col l6">
                            <i class="material-icons prefix">account_box</i>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                        </div>
                        <div class="input-field col l6">
                            <i class="material-icons prefix">credit_card</i>
                            @Html.TextBoxFor(m => m.IdentificationCard, new { @class = "form-control" })
                            @Html.LabelFor(m => m.IdentificationCard, new { @class = "col-md-2 control-label" })
                        </div>
                        <div class="input-field col l6">
                            <i class="material-icons prefix">today</i>
                            @Html.LabelFor(m => m.BirthDay, new { @class = "col-md-2 control-label" })
                            <input id="BirthDay" name="BirthDay" type="text" class="datepicker">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col l12">
                        <span>Informacion de Contacto</span>
                    </div>
                    <div class="col l12 m12 s12"><div class="divider-mio"></div></div>
                    <div class="input-field col l6 m6">
                        <i class="material-icons prefix">contact_mail</i>
                        @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
                        @Html.LabelFor(m => m.Email)
                    </div>
                    <div class="input-field col l6 m6">
                        <i class="material-icons prefix">contact_phone</i>
                        @Html.TextBoxFor(m => m.TelephoneNumber, new { @class = "validate" })
                        @Html.LabelFor(m => m.TelephoneNumber)
                    </div>
                    <div class="input-field col l8 m12">
                        <i class="material-icons prefix">location_city</i>
                        @Html.TextBoxFor(m => m.Address, new { @class = "validate" })
                        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="input-field col l4">
                        @Html.DropDownList("name3", new SelectList(ViewBag.Departamento, "value", "Text"))
                        @Html.LabelFor(m => m.DepartmentAddress, new { @class = "col-md-2 control-label" })
                        @Html.ValidationMessageFor(model => model.DepartmentAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col l12">
                        <span>Configuracion de la Cuenta</span>
                    </div>
                    <div class="col l12 m12 s12"><div class="divider-mio"></div></div>
                    <div class="input-field col l4">
                        <i class="material-icons prefix">perm_identity</i>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="input-field col l4">
                        @Html.DropDownList("name", new SelectList(ViewBag.RoleId, "value", "Text"))
                        <label class="validate">Tipo de Usuario</label>
                    </div>
                    <div class="input-field col l4">
                        @Html.DropDownList("name2", new SelectList(ViewBag.Sucursales, "value", "Text"))
                        @Html.LabelFor(m => m.Sucursal, new { @class = "col-md-2 control-label" })
                        @Html.ValidationMessageFor(model => model.Sucursal, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field col l4">
                        <i class="material-icons prefix">vpn_key</i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="input-field col l4">
                        <i class="material-icons prefix">vpn_key</i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    </div>
                </div>
                <div class="divider"></div>
                <br />
                <div class="row">
                    <div class="col l6">
                        <p>Los campos marcados con * son Obligatorios</p>
                    </div>
                    <div class="col l6 right-align">
                        <input type="reset" class="btn pink" value="Cancelar" />
                        <input class="btn blue waves-effect waves-light" type="submit" name="action" value="Crear">
                    </div>
                </div>
            }
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    $(document).ready(function () {
        $('select').material_select();

        $('.datepicker').pickadate({
            selectMonths: false, // Creates a dropdown to control month
            selectYears: 20, // Creates a dropdown of 15 years to control year,
            today: 'Hoy',
            clear: 'Limpiar',
            close: 'Ok',
            closeOnSelect: false // Close upon selecting a date,
        });
    });
    </script>
}
